@model RegisterViewModel

@{
    ViewBag.Title = "Register";
}

<div class="text-center">
    <h2>Register</h2>
</div>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" 
                       class="form-control" 
                       name="FirstName"
                       data-val="true"
                       data-val-required="The first name is required."
                       aria-describedby="first-name-error"
                       aria-invalid="true"/>
                <span asp-validation-for="FirstName" 
                      class="field-validation-error text-danger ml-2 text-danger" 
                      data-valmsg-for="FirstName" 
                      data-valmsg-replace="true"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" 
                       class="form-control" 
                       name="LastName"
                       data-val="true"
                       data-val-required="The last name is required."
                       aria-describedby="last-name-error"
                       aria-invalid="true"/>
                <span asp-validation-for="LastName" 
                      class="field-validation-error text-danger ml-2 text-danger" 
                      data-valmsg-for="LastName" 
                      data-valmsg-replace="true"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" 
                       class="form-control" 
                       name="EmailAddress"
                       data-val="true"
                       data-val-required="The email address is required."
                       data-val-email="The email address is not valid."
                       aria-describedby="email-error"
                       aria-invalid="true"/>
                <span asp-validation-for="Email" 
                      class="field-validation-error text-danger ml-2 text-danger" 
                      data-valmsg-for="EmailAddress" 
                      data-valmsg-replace="true"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" 
                       class="form-control" 
                       name="Password"
                       data-val="true"
                       data-val-required="The password is required."
                       aria-describedby="password-error"
                       aria-invalid="true"/>
                <span asp-validation-for="Password" 
                      class="field-validation-error text-danger ml-2 text-danger" 
                      data-valmsg-for="Password" 
                      data-valmsg-replace="true"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordConfirmation"></label>
                <input asp-for="PasswordConfirmation" 
                       class="form-control" 
                       name="PasswordConfirmation"
                       data-val="true"
                       data-val-required="The password is required."
                       aria-describedby="password-confirmation-error"
                       aria-invalid="true"/>
                <span asp-validation-for="PasswordConfirmation" 
                      class="field-validation-error text-danger ml-2 text-danger" 
                      data-valmsg-for="PasswordConfirmation" 
                      data-valmsg-replace="true"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}