@model Party

@{
    ViewData["Title"] = "Party details";
}

<div class="text-center">
    <h2>@Model.Name</h2>
</div>

<hr />

<h3>Placeholder - swiper area</h3>

<hr />

<h3>Placeholder - matches area</h3>

<hr />
<div class="text-center">
    <h2>Party Members</h2>

    <div class="container">
        <div class="card-deck">
            <div class="card mb-4" style="min-width: 12rem; max-width: 12rem">
                <img class="card-img-top" src="~/img/default.jpg" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">User email</h5>
                    <p class="card-text">Stuff</p>
                    <button class="btn btn-primary mb-2">Kick</button>
                </div>
            </div>
        </div>
    </div>

    <form class="form-inline">
        <label class="sr-only" for="inlineFormInputEmail">Name</label>
        <input type="text" class="form-control mb-2 mr-sm-2" id="inlineFormInputEmail" placeholder="friend@email.com">
        <button type="submit" class="btn btn-primary mb-2">Add Member</button>
    </form>
</div>