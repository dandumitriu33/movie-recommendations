@model Party

@{
    ViewData["Title"] = "Party details";
}

<div class="text-center">
    <h2 id="partyName">@Model.Name</h2>
</div>

<hr />

<h3>Left for No, right for Yes</h3>

<div class="row justify-content-center">
    <div class="col-auto">
        <div class="table-responsive">
            <table class="table">
                <tbody>
                    <tr>
                        <td class="table-danger text-center text-justify">
                            <a class="btn btn-primary" href="#">No</a>
                        </td>

                        <td id="swiperCardContainer">
                            <div class="card mb-4" style="min-width: 12rem; max-width: 12rem">
                                <img class="card-img-top" src="~/img/default.jpg" alt="Card image cap">
                                <div class="card-body">
                                    <h5 class="card-title">Movie title (year)</h5>
                                    <p class="card-text">IMDB: 9.2</p>
                                    <p class="card-text">Genres: Action, Adventure, Comedy</p>
                                </div>
                            </div>
                        </td>

                        <td class="table-success text-center">
                            <a class="btn btn-primary mb-2" href="#">Yes</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<hr />

<h3>Matches</h3>
<div class="container">
    <div class="card-deck">
        <div id="swiper" class="card mb-4" style="min-width: 12rem; max-width: 12rem">
            <img class="card-img-top" src="~/img/default.jpg" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">Movie title (year)</h5>
                <p class="card-text">IMDB: 9.2</p>
                <p class="card-text">Genres: Action, Adventure, Comedy</p>
            </div>
        </div>
    </div>
</div>

<hr />
<div class="text-center">
    <h2>Party Members</h2>

    <div class="container">
        <div class="card-deck">
            <div class="card mb-4" style="min-width: 12rem; max-width: 12rem">
                <img class="card-img-top" src="~/img/default.jpg" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">User email</h5>
                    <p class="card-text">Stuff</p>
                    <button class="btn btn-primary mb-2">Kick</button>
                </div>
            </div>
        </div>
    </div>

    <form class="form-inline">
        <label class="sr-only" for="inlineFormInputEmail">Name</label>
        <input type="text" class="form-control mb-2 mr-sm-2" id="inlineFormInputEmail" placeholder="friend@email.com">
        <button type="submit" class="btn btn-primary mb-2">Add Member</button>
    </form>
</div>

@section Scripts {
    <script type="module" src="~/js/swiper.js"></script>
    <script type="module" src="~/js/utils.js"></script>

}